{% extends 'base.html.twig' %}

{% block title %}Détail utilisateur{% endblock %}

{% block body %}
<section class="container px-4">
    {% if user is not null %}
        <div class="card mb-1 m-auto text-white" style="background-color: #1b1e1f">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between">
                    <h4>{{ user.firstname }} {{ user.lastname }}</h4>
                    <h5>Email : {{ user.email }}</h5>
                    <small class="text-muted">Dernière conenxion : {{ user.lastConnectedAt|date('d M Y H:i:s') }}</small>
                </div>
                <div class="d-flex justify-content-between card-text">
                    <ul class="list-group list-group-flush">
                        <h4>Roles :</h4>
                        {% for role in user.roles %}
                            <li class="list-group-item text-white" style="background-color: #1b1e1f; border-bottom: none">{{ role }}</li>
                        {% endfor %}
                    </ul>
                    <p><small>Compte vérifié : {{ user.isVerified }}</small></p>
                </div>
            </div>
        </div>
    {% else %}
        <div>Utilisateur non trouvé</div>
    {% endif %}
</section>
{% endblock %}
