{% extends 'base.html.twig' %}

{% block title %}Liste de livres
{% endblock %}

{% block body %}
	<section id="catalogue" class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {% for book in books %}
                    <div class="col mb-5">
                        <div class="card text-white h-100" style="background-color: #1b1e1f">
                            <!-- Book cover -->
                            <img class="card-img-top" src="{{ book.cover }}" alt="Première de couverture de {{ book.title }}" />
                            <!-- Book details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Book title-->
                                    <h5 class="fw-bolder">{{ book.title }}</h5>
                                    <!-- Book authors -->
                                    {{ book.authors|map(a => a.name)|join(', ') }}
                                </div>
                            </div>
                            <!-- Action -->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="btn btn-outline-light mt-auto" href="{{ path('app_book_show', {id: book.id}) }}" class="streched-link">
                                        Voir
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <li class="list-group-item text-white" style="background-color: #1b1e1f">Aucun enregistrement en base de donnéees.</li>
                {% endfor %}
            </div>
            {{ pagerfanta(books) }}
        </div>
    </section>
{% endblock %}
