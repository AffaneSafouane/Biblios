{% extends 'base.html.twig' %}

{% block title %}Détail de l'utilisateur{% endblock %}

{% block body %}
    <section class="container px-4">
        <div class="d-flex justify-content-between">
            <h1>Utilisateur :</h1>
            <span class="align-content-center"><a href="{{ path('app_admin_user_index') }}" class="link">Retour</a></span>
        </div>
        {% if user is not null %}
            <div class="card mb-1 m-auto text-white" style="background-color: #1b1e1f">
                <div class="card-body">
                    <div class="card-title d-flex justify-content-between">
                        <h4 class="mb-1">{{ user.email }}</h4>
                        <small class="text-muted">Identifiant : {{ user.id }}</small>
                    </div>
                    <div class="d-flex justify-content-between card-text">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item text-white" style="background-color: #1b1e1f; border-bottom: 1px solid gray;">Dernière connexion : {{ user.lastConnectedAt|date('d M Y') }}</li>
                            <li class="list-group-item text-white" style="background-color: #1b1e1f; border-bottom: 1px solid gray">Compte vérifié : {{ user.isVerified }}</li>
                            <li class="list-group-item text-white" style="background-color: #1b1e1f; border-bottom: none">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item text-white" style="background-color: #1b1e1f; border-bottom: 1px solid gray;">Nom : {{ user.lastname }}</li>
                                    <li class="list-group-item text-white" style="background-color: #1b1e1f; border-bottom: 1px solid gray;">Prénom : {{ user.firstname }}</li>
                                </ul>
                            </li>
                            <li class="list-group-item text-white" style="background-color: #1b1e1f; border-bottom: none">
                                <h5>Roles : </h5>
                                <ul class="list-group list-group-flush">
                                    {% for role in user.roles %}
                                        <li class="list-group-item text-white" style="background-color: #1b1e1f; border-bottom: 1px solid gray">{{ role }}</li>
                                    {% endfor %}
                                </ul>
                            </li>
                        </ul>
                        <div>
                            <img src="#" alt="Photo de profil de {{ user.email }}" class="img-fluid img-thumbnail" width="800px">
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div>Utilisateur non trouvé</div>
        {% endif %}
    </section>
{% endblock %}