{% extends 'base.html.twig' %}

{% block title %}Liste d'éditeurs{% endblock %}

{% block body %}
<section class="container px-4">
    <h1>Liste d'éditeurs</h1>
    <ul class="list-group list-group-flush">
        {% for editor in editors %}
            <div class="card text-white mb-1" style="background-color: #1b1e1f">
                <div class="card-body">
                    <div class="card-title d-flex justify-content-between">
                        <li class="list-group-item text-white" style="background-color: #1b1e1f">
                            <a href="{{ path('app_admin_editor_show', {id: editor.id}) }}" class="streched-link">
                                <h4 class="mb-1">{{ editor.name }}</h4>
                            </a>
                            <small class="text-muted">Identifiant : {{ editor.id }}</small>
                        </li>
                    </div>
                </div>
            </div>
        {% else %}
            <li class="list-group-item text-white" style="background-color: #1b1e1f">Aucun enregistrement en base de donnéees.</li>
        {% endfor %}
    </ul>
    {{ pagerfanta(editors)}}
</section>
{% endblock %}
